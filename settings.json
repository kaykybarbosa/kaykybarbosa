{
    "workbench.colorTheme": "OM Theme (Default Dracula Italic)",
    "workbench.layoutControl.enabled": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.activityBar.location": "hidden",
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 13,
    "editor.tokenColorCustomizations": {"comments": "#55ff00"},
    "editor.fontLigatures": "'ss01-20', 'cv01-99', 'ss19'" ,
    "editor.fontVariations": false,
    "editor.renderLineHighlight": "gutter",
    "editor.semanticHighlighting.enabled": true,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "window.commandCenter": false,
    "window.zoomLevel": 0.8,
    "explorer.compactFolders": false,
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "pubspec.yaml": "pubspec.lock,pubspec_overrides.yaml,.packages,.flutter-plugins,.flutter-plugins-dependencies,.metadata",
        "*.dart": "${capture}.g.dart"
    },
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
    "breadcrumbs.enabled": false,
    "window.titleBarStyle": "native",
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.formatOnPaste": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        },
        "editor.rulers": [90],
        "editor.selectionHighlight": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": "off",
    },
    "dart.flutterCreatePlatforms": ["android", "ios"],
    "dart.lineLength": 120,
    "dart.debugExternalPackageLibraries": false,
    "dart.debugSdkLibraries": false,
    "dart.flutterCreateAndroidLanguage": "kotlin",
    "material-icon-theme.folders.associations": {"pages": "views"},
    "terminal.integrated.defaultProfile.windows": "PowerShell",

    // APC CONFIGS
    "apc.electron": {"titleBarStyle": "hiddenInset"},
    "apc.header": {"height": 36},
    "apc.font.family": "Inter",
    "apc.stylesheet": {".title-label > h2": "display: none"},
    "apc.listRow": {"height": 24},
}
